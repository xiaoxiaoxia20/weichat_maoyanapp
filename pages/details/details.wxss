.detail {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #e0e0e0;
}

.info {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 10rpx;
  position: relative;
  overflow: hidden;
  z-index: 1;
  height: 100%;
}
/* 高斯模糊 */
.blur {
  filter: blur(30px);
  -webkit-filter: blur(30px);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 100%;
  height: 160px;
  overflow: hidden;
  position: absolute;
  align-self: center;
  z-index: 0;
}

.desc {
  display: flex;
  flex-direction: column;
  padding: 3%;
  box-sizing: border-box;
  align-items: center;
  background-color: white;
}
