.dra {
  margin-top: 10px;
  font-size: 10pt;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}

.down {
  transform: rotate(180deg);
}

#text {
  height: 50rpx;
}

.showinfo {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.small {
  color: lightgrey;
  font-size: 10pt;
}

.score {
  color: orange;
  font-size: 13pt;
  font-weight: bold;
}

.comment {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  background-color: #e0e0e0;
  margin-top: 25rpx;
}

.com {
  background-color: white;
  padding: 10px;
}

.hotcom {
  margin-top: 1px;
  background-color: white;
  padding: 10px;
}

.user {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  border: solid 1px lightyellow;
  border-radius: 50px;
  margin-top: 5px;
}

.comdetail {
  font-size: 10pt;
  line-height: 20px;
  margin: 10px 0px;
}

.line {
  width: 100%;
  height: 1px;
  background-color: #e0e0e0;
}
